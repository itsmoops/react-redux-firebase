{
	/*
	0 - off
	1 - warn
	2 - error
 	*/

	"extends": "airbnb",
	"plugins": ["react"],
	"env": {
		"browser": true,
		"node": true,
		"es6": true,
		"mocha": true
	},
	"globals": {
		"React": true,
		"ReactDOM": true,
		"PropTypes": true,
		"state": true,
		"firebase": true
	},
	"rules": {
		"semi": [2, "never"],
		"quotes": [2, "single"],
		"indent": [2, 4],
		"no-tabs": [0],
		"no-debugger": [0],
		"comma-dangle": [2, "never"],
		"object-curly-spacing": [2, "always"],
		"jsx-a11y/href-no-hash": 0,
		"jsx-a11y/anchor-is-valid": [
			"warn",
			{
				"aspects": ["invalidHref"]
			}
		],
		"react/react-in-jsx-scope": 0,
		"react/jsx-indent": [2, 4],
		"react/prop-types": 0
	}
}
